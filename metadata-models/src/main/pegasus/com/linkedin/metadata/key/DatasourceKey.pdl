namespace com.linkedin.metadata.key

import com.linkedin.common.Urn
import com.linkedin.common.FabricType

/**
 * Key for a Datasource
 */
@Aspect = {
  "name": "datasourceKey"
}
record DatasourceKey {
  /**
  * Data platform urn associated with the datasource
  */
  @Searchable = {
    "fieldType": "URN",
    "addToFilters": true
  }
  platform: Urn

  /**
  * Datasource native name e.g. db.table, /dir/subdir/name, or name
  */
  @Searchable = {
    "fieldType": "TEXT_PARTIAL",
    "enableAutocomplete": true,
    "boostScore": 10.0
  }
  name: string

  /**
  * Fabric type where datasource belongs to or where it was generated.
  */
  @Searchable = {
    "fieldType": "TEXT_PARTIAL",
    "addToFilters": true,
    "queryByDefault": false
  }
  origin: FabricType
}
